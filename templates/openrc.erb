#!/bin/sh
<% if @keystone_admin_token -%>
export OS_SERVICE_TOKEN='<%= @keystone_admin_token.gsub(/'/){ %q(\') } %>'
export OS_SERVICE_ENDPOINT='<%= @url_scheme %>://<%= @controller_node %>:35357/'
<% end -%>
export OS_AUTH_URL='<%= @url_scheme %>://<%= @controller_node %>:5000/'
export OS_PROJECT_NAME='<%= @admin_tenant %>'
export OS_USERNAME='<%= @admin_user %>'
export OS_IDENTITY_API_VERSION=3

export OS_DEFAULT_DOMAIN='default'
export OS_USER_DOMAIN_NAME='default'
export OS_PROJECT_DOMAIN_NAME='default'

export OS_PASSWORD='<%= @admin_password.gsub(/'/){ %q(\') } %>'
export OS_AUTH_STRATEGY='keystone'
export OS_REGION_NAME='<%= @region_name %>'
